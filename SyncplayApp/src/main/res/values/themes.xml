<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SyncPlay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sp1</item>
        <item name="colorPrimaryVariant">@color/sp2</item>
        <item name="colorOnPrimary">@color/text1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sp2</item>
        <item name="colorSecondaryVariant">@color/sp3</item>
        <item name="colorOnSecondary">@color/text1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Globalizing text colors. -->
        <item name="android:textColor">@color/sp_shade</item>
        <item name="android:textColorSecondary">@color/text2</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="p">default</item>
    </style>

    <style name="Theme.splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@mipmap/syncplay_logo_insetter</item>
        <item name="windowSplashScreenBackground">#444444</item>
        <item name="postSplashScreenTheme">@style/MainScreenTheme</item>
    </style>

    <style name="MainScreenTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/sp1</item>
        <item name="colorPrimaryVariant">@color/sp2</item>
        <item name="colorOnPrimary">@color/text1</item>
        <item name="colorSecondary">@color/sp2</item>
        <item name="colorSecondaryVariant">@color/sp3</item>
        <item name="colorOnSecondary">@color/text1</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:textColor">@color/sp_shade</item>
        <item name="android:textColorSecondary">@color/text2</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>
</resources>